
@{
	ViewData["Title"] = "Contacto";
}

<h1>Formulario de contacto</h1>

<form asp-controller="Home" asp-action="Contacto">
	<div class="mb-3">
		<label for="nombre" class="form-label">Nombre</label>
			<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Dime el nombre que Pandih te puso"/>
	</div>
	<div class="mb-3">
		<label for="email" class="form-label">Email</label>
			<input type="email" class="form-control" id="email" name="email" placeholder="Dime el email que quieres que Pandih sepa"/>
	</div>
	<div class="mb-3">
		<label for="mensaje" class="form-label">Mensaje</label>
			<textarea class="form-control" id="mensaje" name="mensaje" rows="6" placeholder="Aquí puedes contar todas tus quejas/maltratos recibidos por parte de Pandih"></textarea>
	</div>
	<button type="submit" class="btn-primary btn-primary">Enviar denuncia</button>

	

</form>